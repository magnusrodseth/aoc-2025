{
  "name": "aoc-2025-agent",
  "version": "1.0.0",
  "description": "Autonomous Advent of Code 2025 solver using Claude Agent SDK",
  "type": "module",
  "scripts": {
    "agent:run": "bun run src/agent/main.ts",
    "agent:run-day": "bun run src/agent/main.ts --day",
    "agent:test": "bun run src/agent/main.ts --dry-run",
    "agent:debug": "bun run src/agent/main.ts --debug",
    "dev": "bun --watch src/agent/main.ts",
    "setup": "bun install && bun run validate",
    "validate": "bun run src/agent/check-session.ts",
    "check-session": "bun run src/agent/check-session.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  }
}
